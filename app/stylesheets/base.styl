@import "mixins"

marx-js-controls,
marx-js-ipsum
  font-family Arial, sans-serif

  p, a, li, label
    font-size 16px
    line-height 1.5em
    color #333

  h4
    font-size 24px
    margin-bottom 15px

marx-js-controls
  position fixed
  z-index 2000
  display flex
  background #f6f6f6
  box-shadow(0, 0, 8px, rgba(#000, 0.7))

  a
    color #333
    text-decoration none
    background-color #ddd

    &:hover
      background-color #ccc

    &.marx-toggle-advanced
      background transparent
      margin 5px 0
      &:hover { background: transparent }


marx-js-ipsum
  background lime
  position fixed
  z-index 1000
  width 360px
  padding 20px
  background #f6f6f6
  box-shadow(0,0,8px,rgba(0, 0, 0, 0.7))

  .marx-container
    overflow-y auto
    max-height 360px
    margin-top 30px

  ipsum-para
    display block
    font-size 14px
    margin-bottom 15px
    line-height 1.5em

  a.marx-ipsum-close
    position absolute
    top 20px
    right 20px
    display block
    width 30px
    padding 3px 0
    color #fff
    background-color #333
    text-align center
    text-decoration none


standard-controls,
advanced-controls
  display none
  flex 1
  min-width 310px
  padding 20px

  control
    display flex
    flex-wrap wrap
    flex-direction row-reverse
    align-items center
    margin 5px 0
    padding 5px 0
    border-bottom 1px solid #ddd

    p
      display flex
      flex-wrap wrap
      flex 3
      margin 0

    a
      padding 2px 8px
      margin-left auto
      border 1px solid #ccc
      border-radius 2px

    ipsum
      width 100%

    input[type=number]
      font-size 16px
      width 40px
      padding 2px 5px
      margin-right 8px



marx-js-open
  position absolute
  color #333
  text-align right

  a.quick-populate
    padding 10px
    margin-left auto

  a.quick-populate,
  a.standard-controls,
  a.advanced-controls
    display block
    // margin-left auto
    background-color transparent
    &:hover { background-color: #ccc }

  a.standard-controls,
  a.advanced-controls
    width 40px
    padding 10px 0
    hidden()
    background-repeat no-repeat
    background-position center center
    bg-size(24px, 24px)
    text-align left

  a.standard-controls { background-image: url(http://marxjs.com/assets/icons/standard.png) }
  a.advanced-controls { background-image: url(http://marxjs.com/assets/icons/advanced.png) }

  a.open-controls,
  .open-controls-group
    background-image url(http://marxjs.com/assets/icons/groucho.png)
    background-color #ddd
    background-repeat no-repeat
    background-position 5px center
    bg-size(32px, 32px)

  .open-controls-group
    display flex
    width 195px

  a.open-controls
    display block
    width 100px
    padding 10px 10px 10px 0
    &:hover { background-color: #ccc; }


toggle-advanced
  float right

  a
    background transparent
    margin 5px 0
    &:hover { background: transparent }


//========================\\
//    loading spinner     \\
//========================\\

spinner
  margin 30px auto
  font-size 10px
  display block
  position relative
  text-indent -9999em
  border 1.1em solid rgba(grey-dk, 0.2)
  border-left 1.1em solid grey-dk

  transform translateZ(0)
  animation load8 1.1s infinite linear

spinner,
spinner:after
  border-radius 50%
  width 50px
  height 50px
  overflow hidden

$keyframe-name = load8

@-webkit-keyframes {$keyframe-name}
  0%
    -webkit-transform rotate(0deg)
    transform rotate(0deg)

  100%
    -webkit-transform rotate(360deg)
    transform rotate(360deg)

@keyframes {$keyframe-name}
  0%
    -webkit-transform rotate(0deg)
    transform rotate(0deg)

  100%
    -webkit-transform rotate(360deg)
    transform rotate(360deg)



//========================\\
//    marx positioning    \\
//========================\\
marx-js-controls
  // both bottom
  &.marx-bottom-right,
  &.marx-bottom-left
    bottom 0
    padding-bottom 40px
    border-top 1px solid #ddd

    marx-js-open
      bottom 0

  // both right
  &.marx-top-right,
  &.marx-bottom-right
    right 0
    padding-bottom 50px
    border-left 1px solid #ddd

    marx-js-open
      right 0

  // both top
  &.marx-top-right,
  &.marx-top-left
    top 0
    padding-top 40px
    border-bottom 1px solid #ddd

    marx-js-open
      top 0

  // both left
  &.marx-top-left,
  &.marx-bottom-left
    left 0
    border-right 1px solid #ddd

    marx-js-open
      left 0

marx-js-ipsum
  // both bottom
  &.marx-bottom-right,
  &.marx-top-right
    left 0
    border-right 1px solid #ddd

  // both left
  &.marx-top-left,
  &.marx-bottom-left
    right 0
    border-left 1px solid #ddd